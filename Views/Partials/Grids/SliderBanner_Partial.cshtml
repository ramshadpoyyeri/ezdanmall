@{
    Layout = null;
    String gridData = Model;
    String doctype = Context.Request.Query["doctype"];
}

<div class="category-table">
    <table id="dataTable" aria-describedby="dataTable_info">
        <thead>
            <tr>
                <th scope="col">
                    <input class="select-all" type="checkbox" id="all">
                    <label for="all"></label>
                </th>
                <th scope="col">POSITION</th>
                <th scope="col">BANNER IMAGE</th>
                <th scope="col">MAIN TITLE</th>
                <th scope="col">SUB TITLE</th>
                <th scope="col">URL</th>
                <th scope="col">ACTION</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    var dataTable;
    $(document).ready(function ()
    {
        var gridData = JSON.parse(JSON.stringify(@Html.Raw(gridData)));
        //var gridData = JSON.parse('Html.Raw(gridData)');
        dataTable = $("#dataTable").DataTable({
            bFilter: true,
            "bInfo" : false,
                language:{"infoEmpty": "No records available",
            },
            bPaginate: true,
            data: gridData,
            columnDefs:
            [{
                "targets": [0],
                "visible": true,
                "searchable": false,
                //"sortable" : false
            }
            ],
            "columns": [
                 {
                    "render": function (data, type, row, meta)
                    {
                        return "<input class='individual' type='checkbox' id='"+row.SBM_DocNo+"'><label for='"+row.CAT_DocNo+"'></label>";
                    }
                },
                { data: "SBM_SortNo", render: function(data, type, row)
                  { return "<div class='clip' title='"+data+"'>"+data+"</div>"; }
                },
                {
                    "render": function (data, type, row, meta)
                    {
                        return "<div class='store'><img src='"+row.SBM_BannerImage+"'/></div>";
                    }
                },
                { data: "SBM_Description", render: function(data, type, row)
                  { return "<div class='clip' title='"+data+"'>"+data+"</div>"; }
                },
                { data: "SBM_Subtitle", render: function(data, type, row)
                  { return "<div class='clip' title='"+data+"'>"+data+"</div>"; }
                },
                { data: "SBM_RedirectUrl", render: function(data, type, row)
                  { return "<div class='clip' title='"+data+"'>"+data+"</div>"; }
                },
                {
                    data: null, render: function (data, type, row)
                    {
                        return "<div class='action-btn'><div class='edit'><a href='/admin/EntryForm?doctype=@doctype&docno="+row.SBM_DocNo+"'><img src='/admin_assets/images/edit.svg' alt=''></a></div>"
                             + "<div class='delete'><a href='#' id='"+row.SBM_DocNo+"' onclick=\"ShowDeleteDialog('"+row.SBM_DocNo+"','Are you sure you want to delete the banner?')\"><img src='/admin_assets/images/delete.svg' alt=''></a></div>"
                             + "</div>";
                    }
                },
            ]
        });

        //customize search..
        $('#txtSearch').keyup(function(){
              dataTable.search($(this).val()).draw();
        })

        setTimeout(function(){
            var pageSizeHtml = "<label class='d-flex pageSize'>Show <select name='dataTable_length' id='pageSize' aria-controls='dataTable' class='form-select form-select-sm'><option value='10'>10</option><option value='25'>25</option><option value='50'>50</option><option value='100'>100</option></select> entries</label>";
            $(".dataTables_wrapper .row:last-child .col-md-5").html(pageSizeHtml);

            $('#pageSize').change(function(){
                dataTable.page.len($(this).val()).draw();
            });

        },100);
    });
</script>