<script>
    $(document).ready(function() {
        $("#slider")
          .on("initialized.owl.carousel changed.owl.carousel", function(e) {
            if (!e.namespace) {
              return;
            }
            $("#counter").html(
              e.relatedTarget.relative(e.item.index) + 1 + "/" + "<i>" + e.item.count + "</i>"
            );
          })
          .owlCarousel({
            margin: 0,
            stagePadding: 0,
            nav: false,
            autoplay: true,
            autoplayTimeout: 5000,
            dots: false,
            loop: true,
            smartSpeed: 1050,
            items: 1,
          });

    });

</script>
